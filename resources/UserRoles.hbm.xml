<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.UserRoles" table="user_roles" schema="thecodex">
        <meta attribute="class-description">
            This class contains the User Role details.
        </meta>

        <!--Add id for the key -->
        <id name="userName">
            <column name="user_name" sql-type="string"/>
        </id>
        <!--Add a property for all other instance variables/columns-->
        <property name="roleName" column="role_name" type="string"/>

    </class>
</hibernate-mapping>